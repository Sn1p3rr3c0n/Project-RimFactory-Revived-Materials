<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>PRF_MixedPlastic</defName>
    <label>plastic</label>
    <description>A rough solid mixture of plastic, flammable and weak but lightweight and easy to work. Can still be used in architecture and crafting but would be much better when refined.</description>
    <graphicData>
      <texPath>Resources/PRF_GeneralPlastic</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(180,180,180)</color>
      <drawSize>(1.2,1.2)</drawSize>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>4.5</MarketValue>
      <Mass>0.020</Mass>
      <Flammability>1.2</Flammability>
      <StuffPower_Armor_Sharp>0.44</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.44</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.25</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>4</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>2</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.35</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.9</BluntDamageMultiplier>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <smeltable>true</smeltable>
    <stuffProps>
      <categories>
        <li>Woody</li>
      </categories>
      <commonality>0.001</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(180,180,180)</color>
      <soundImpactStuff>BulletImpact_Metal</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <stuffAdjective>plastic</stuffAdjective>
      <appearance>Smooth</appearance>
      <statFactors>
        <MaxHitPoints>0.65</MaxHitPoints>
        <Beauty>1</Beauty>
        <Flammability>1</Flammability>
        <WorkToMake>0.6</WorkToMake>
        <WorkToBuild>0.6</WorkToBuild>
        <DoorOpenSpeed>1.3</DoorOpenSpeed>
      </statFactors>
    </stuffProps>
  </ThingDef>

  <!--Textiles-->

  <ThingDef ParentName="ResourceBase">
    <defName>PRF_Polyester</defName>
    <label>polyester</label>
    <description>Polyester sheet that has been woven from artificially created plastic fibres. Cheap alternative for cloth, makes good carpet and passable apparel.</description>
    <graphicData>
      <texPath>Resources/PRF_SyntheticTextile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(152,152,172)</color>
      <drawSize>(0.8,0.8)</drawSize>
    </graphicData>
    <statBases>
      <StuffPower_Armor_Sharp>0.41</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.1</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.22</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>20</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>20</StuffPower_Insulation_Heat>
      <MaxHitPoints>85</MaxHitPoints>
      <MarketValue>3.5</MarketValue>
      <Mass>0.020</Mass>
      <Flammability>10.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
    </statBases>
    <stuffProps>
      <statFactors>
        <Flammability>1.2</Flammability>
      </statFactors>
      <categories>
        <li>Fabric</li>
      </categories>
      <color>(188,188,162)</color>
      <commonality>0.05</commonality>
      <allowColorGenerators>true</allowColorGenerators>
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <colorGeneratorInTraderStock Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>5</weight>
          <only>(1,1,1,1)</only>
        </li>
        <li>
          <weight>5</weight>
          <only>(0.9,0.9,0.9,1)</only>
        </li>
        <li>
          <weight>5</weight>
          <only>(1,0.9,0.9,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.9,0.9,0.9,1)</max>
        </li>
      </options>
    </colorGeneratorInTraderStock>
  </ThingDef>

