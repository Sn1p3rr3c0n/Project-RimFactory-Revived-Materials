<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Base concept borrowed from VGP Gourmet, updated to prf - materials fit -->
	<ThingDef ParentName="PRF_BenchLikeBase">
		<defName>PRF_GrindStone</defName>
		<label>GrindStone</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A Stone made Grindstone, for crushing stuff early on, this is usefull for tribal ppl.</description>
		<graphicData>
			<texPath>Things/Building/PRF_GrindingStone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<costList>
			<WoodLog>20</WoodLog>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>500</WorkToBuild>
			<MaxHitPoints>120</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(1,1)</size>
		<passability>PassThroughOnly</passability>
		<pathCost>60</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
			<li>PRF_CrushSand</li>
			<li>PRF_MakeCement</li>
			<li>PRF_CrushQuartz</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<designationCategory>Production</designationCategory>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<isMealSource>true</isMealSource>
		</building>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<researchPrerequisites>
			<li>Stonecutting</li>
		</researchPrerequisites>
	</ThingDef>

</Defs>