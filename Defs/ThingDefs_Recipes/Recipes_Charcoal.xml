<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ===================================== Charcoal ======================================== -->
  <RecipeDef>
    <defName>PRF_MakeCharcoal</defName>
    <label>make charcoal</label>
    <description>Burning wood to obtain Charcoal (this is same as normal coal)</description>
    <jobString>making charcoal.</jobString>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>700</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <PRF_Coal>10</PRF_Coal>
    </products>
    <researchPrerequisite>Stonecutting</researchPrerequisite>
  </RecipeDef>

  <!-- ===================================== Coal to Chemfuel ======================================== -->
  <RecipeDef>
    <defName>PRF_ChemfuelFromCoal</defName>
    <label>make chemfuel from coal</label>
    <description>Make a batch of chemfuel by extracting and condensing coal gas from coal.</description>
    <jobString>Refining chemfuel from Coal.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>2000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PRF_Coal</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>PRF_Coal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Chemfuel>10</Chemfuel>
    </products>
    <recipeUsers>
      <li>BiofuelRefinery</li>
    </recipeUsers>
  </RecipeDef>

</Defs>