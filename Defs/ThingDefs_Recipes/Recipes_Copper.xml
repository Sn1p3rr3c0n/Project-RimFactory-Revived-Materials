<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>PRF_MakeCopperCoal</defName>
    <label>Refine copper ingots</label>
    <description>Refine copper ore into usable cooper ingots.</description>
    <jobString>Refining copper ore.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>6000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PRF_Copper</li>
          </thingDefs>
        </filter>
        <count>70</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>PRF_Copper</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <PRF_CopperIngot>70</PRF_CopperIngot>
    </products>
    <researchPrerequisite>Smithing</researchPrerequisite>
  </RecipeDef>

