<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<RecipeDef>
		<defName>PRF_MakeMixedPlastic</defName>
		<label>make plastic</label>
		<description>Reform the hydrocarbons within crude oil or bio-oil to produce a solidified form that can be used in construction.</description>
		<jobString>Making plastic.</jobString>  
		<allowMixingIngredients>false</allowMixingIngredients>
		<skillRequirements>
		<Crafting>3</Crafting>
        </skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_Carbon</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
				<li>PRF_Carbon</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<PRF_MixedPlastic>10</PRF_MixedPlastic>
		</products>
		<workAmount>600</workAmount>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.75</workSkillLearnFactor>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<researchPrerequisite>PRF_BasicPlastics</researchPrerequisite>
		<recipeUsers>
			<li>PRF_MetalRefinery</li>
		</recipeUsers>
	</RecipeDef>

