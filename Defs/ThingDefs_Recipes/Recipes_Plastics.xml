	<RecipeDef>
		<defName>PRF_MakePolyesterFibre</defName>
		<label>make polyester fibre</label>
		<description>By denaturing and reforming plastics through the process of polycondensation, small fibres of polyester can be made, however they will require further work at a tailor bench to be made into a usable fabric.</description>
		<jobString>Making polyester fibre.</jobString>  
		<allowMixingIngredients>false</allowMixingIngredients>
		<skillRequirements>
		<Crafting>3</Crafting>
        </skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_MixedPlastic</li>
					</thingDefs>
				</filter>
				<count>6</count>
			</li>
		</ingredients>
		<products>
			<PRF_Polyester>20</PRF_Polyester>
		</products>
		<workAmount>500</workAmount>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.75</workSkillLearnFactor>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<researchPrerequisite>PRF_BasicPlasticTextiles</researchPrerequisite>
		<recipeUsers>
			<li>PRF_MetalRefinery</li>
		</recipeUsers>
	</RecipeDef>

