<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Turn off if "any" mods from list is installed -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Coal Expanded</li>
			<li>Materials+</li>
			<li>Simple Mining Extension</li>
			<li>Expanded Materials - Metals</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="PRF_Coal"]</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="PRF_MineableCoal"]</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/RecipeDef[defName="PRF_ChemfuelFromCoal"]</xpath>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>